header.header
	.container
		.header-top 
			a.header-logo(href="#") MoGo 
			i.fa.fa-bars.header-toggle 
			ul.header-menu
				+headerMenuLink("About")
				+headerMenuLink("Service")
				+headerMenuLink("Work")
				+headerMenuLink("Blog")
				+headerMenuLink("Contact")
				+headerMenuIcon("fa fa-shopping-cart")
				+headerMenuIcon("fa fa-search")

		.header-content 
			h2.header-content-caption Creative Template 
			h1.header-content-main Welcome to mogo
			a.header-content-more(href="#") Learn more
		.header-bottom 
			+headerBottomItem("01", "Intro", "is-active")
			+headerBottomItem("02", "Work")
			+headerBottomItem("03", "About")
			+headerBottomItem("04", "Contacts")